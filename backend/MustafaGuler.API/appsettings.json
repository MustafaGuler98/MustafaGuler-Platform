{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq"
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/mustafa-platform-log-.txt",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 31,
                "fileSizeLimitBytes": 20971520,
                "rollOnFileSizeLimit": false,
                "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
              }
            }
          ]
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=mustafa_platform;Username=mustafa;Password=placeholder"
  },
  "Token": {
    "SecurityKey": "placeholder",
    "Issuer": "mustafaguler.me",
    "Audience": "mustafaguler.me"
  },
  "LastFm": {
    "ApiKey": "",
    "Username": ""
  },
  "Kafka": {
    "BootstrapServers": "kafka:29092"
  }
}